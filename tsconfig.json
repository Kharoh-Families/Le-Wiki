{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2020",
    "target": "es5",
    "jsx": "react",
    "removeComments": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
}